<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var class="com.jinjiang.web.bean.bean.UserPrivilege" name="privilegeinfo"/>

    <view-state id="index/index" >
        <transition on="login" to="getPrivilegeInfo" />
        <transition on-exception="com.jinjiang.web.exception.ErrorUserNameOrPasswordException" to="index/index" />
    </view-state>
    
    <action-state id="getPrivilegeInfo" >
        <evaluate result="privilegeinfo" expression="request2Privilege.convert(requestParameters.num)"/>
    </action-state>

  <end-state id="cancel" />

    <end-state id="userinfoReady" >
        <output name="privilegeinfo" />
    </end-state>

    <global-transitions>
        <transition on="cancel" to="cancel"/>
    </global-transitions>
</flow>